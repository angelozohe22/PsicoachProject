<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/ly_item_event_container"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/lbl_package"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="14dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/googlesans_regular"
        android:text="Paquete: "
        android:lines="1"
        android:ellipsize="end"
        android:textSize="14sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toLeftOf="@id/img_icon_pending"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/lbl_issue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/googlesans_regular"
        android:text="Tema: "
        android:lines="1"
        android:ellipsize="end"
        android:textSize="12sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@id/lbl_package"
        app:layout_constraintRight_toRightOf="@id/lbl_package"
        app:layout_constraintTop_toBottomOf="@id/lbl_package" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_icon_hour"
        android:layout_width="12dp"
        android:layout_height="12dp"
        android:layout_marginTop="6dp"
        android:background="@drawable/ic_time"
        app:layout_constraintLeft_toLeftOf="@id/lbl_issue"
        app:layout_constraintTop_toBottomOf="@id/lbl_issue"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/lbl_time"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:layout_marginLeft="4dp"
        android:text="Hora: "
        android:textSize="12sp"
        android:fontFamily="@font/googlesans_regular"
        app:layout_constraintLeft_toRightOf="@id/img_icon_hour"
        app:layout_constraintTop_toBottomOf="@id/lbl_issue"
        app:layout_constraintRight_toRightOf="@id/lbl_issue"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/lbl_title_link"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/googlesans_regular"
        android:text="Link de evento:"
        android:lines="1"
        android:ellipsize="end"
        android:textSize="12sp"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@id/img_icon_hour"
        app:layout_constraintRight_toRightOf="@id/lbl_package"
        app:layout_constraintTop_toBottomOf="@id/lbl_time" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/lbl_link"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:fontFamily="@font/googlesans_regular"
        android:text="Link"
        android:textSize="14sp"
        android:linksClickable="true"
        android:autoLink="web"
        app:layout_constraintBottom_toBottomOf="@id/separator"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="@id/lbl_title_link"
        app:layout_constraintRight_toRightOf="@id/lbl_package"
        app:layout_constraintTop_toBottomOf="@id/lbl_title_link"
        app:layout_constraintVertical_bias="0.0" />

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="0.8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/separator_light"
        app:layout_constraintTop_toBottomOf="@id/lbl_link"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/img_icon_pending"
        android:layout_width="55dp"
        android:layout_height="55dp"
        android:layout_marginTop="16dp"
        android:layout_marginRight="24dp"
        android:background="@drawable/ic_pencil"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/lbl_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="Subir voucher"
        android:textSize="12sp"
        android:textAlignment="center"
        android:fontFamily="@font/googlesans_regular"
        app:layout_constraintLeft_toLeftOf="@id/img_icon_pending"
        app:layout_constraintRight_toRightOf="@id/img_icon_pending"
        app:layout_constraintTop_toBottomOf="@id/img_icon_pending"
        />


</androidx.constraintlayout.widget.ConstraintLayout>
